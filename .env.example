# ============================================================================
# Regav Trading Agent - Production Environment Variables
# ============================================================================

# Environment
NODE_ENV=production
LOG_LEVEL=info
PORT=3000

# ============================================================================
# Recall Network Configuration
# ============================================================================
RECALL_NETWORK=testnet
RECALL_API_BASE_URL=https://api.testnet.recall.network
RECALL_PRIVATE_KEY=your_recall_private_key_here
RECALL_COMPETITION_ID=your_competition_id_here

# ============================================================================
# Vincent (Lit Protocol) Configuration
# ============================================================================
VINCENT_APP_ID=983
VINCENT_APP_VERSION=1
VINCENT_DELEGATEE_WALLET_NAME=arbWallet
VINCENT_CONSENT_PAGE_URL=https://vincent.domains/consent
VINCENT_MAX_TRADE_AMOUNT=1000
VINCENT_TRADE_EXPIRY_MINUTES=10
VINCENT_SPENDING_LIMIT_DAILY=5000

# Lit Protocol Configuration
LIT_NETWORK=datil-dev
LIT_CAPACITY_CREDIT_TOKEN_ID=your_capacity_credit_token_id_here

# ============================================================================
# Gaia AI Network Configuration
# ============================================================================
GAIA_NETWORK=testnet
GAIA_API_KEY=your_gaia_developer_api_key_here
GAIA_NODE_URL=https://llama8b.gaia.domains/v1
GAIA_MODEL=Llama-3.2-3B-Instruct
GAIA_EMBEDDING_MODEL=nomic-embed-text-v1.5.f16

# ============================================================================
# Trading Strategy Configuration
# ============================================================================
TRADING_PAIRS=BTC/USDT,ETH/USDT,SOL/USDC,XRP/USDT,WETH/USDC
SCALPING_INTERVAL=2000
BASE_POSITION_SIZE=0.08
MAX_CONCURRENT_TRADES=5
STOP_LOSS_PERCENT=0.3
TAKE_PROFIT_PERCENT=0.5
MAX_DRAWDOWN_PERCENT=2.0

# ============================================================================
# Production Security
# ============================================================================
# JWT_SECRET=your_jwt_secret_here (optional)
# JWT_EXPIRY=24h (optional)

# ============================================================================
# Production Deployment URLs (will be set by Vercel)
# ============================================================================
# VERCEL_URL=your-app-name.vercel.app (automatically set by Vercel)
# VERCEL_ENV=production (automatically set by Vercel)